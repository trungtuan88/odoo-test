<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="ir_cron_scheduler_sync_hr_attendance" model="ir.cron">
			<field name="name">Attendance Device: Synchronize hr.attendance scheduler</field>
			<field name="model_id" ref="model_user_attendance_line" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">30</field>
			<field name="interval_type">minutes</field>
			<field name="code">model._cron_sync_attendance_line()</field>
		</record>

		<record id="ir_cron_scheduler_delete_old_device_commands" model="ir.cron">
			<field name="name">Attendance Device: Delete old device command scheduler</field>
			<field name="model_id" ref="model_command_to_device" />
			<field name="user_id" ref="base.user_root" />
			<field name="state">code</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="priority">8</field>
			<field name="code">model._cron_delete_old_commands(days=90)</field>
		</record>
	</data>
</odoo>
