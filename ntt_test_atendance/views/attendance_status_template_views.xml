<odoo>

    <record id="view_attendance_status_template_list" model="ir.ui.view">
        <field name="name">attendance.status.template.list</field>
        <field name="model">attendance.status.template</field>
        <field name="arch" type="xml">
            <list string="Attendance Status Template" sample="1" editable="bottom">
                <field name="name" />
                <field name="code" />
                <field name="type" />
            </list>
        </field>
    </record>

    <record id="attendance_status_template_list_action" model="ir.actions.act_window">
        <field name="name">Attendance Status Template</field>
        <field name="res_model">attendance.status.template</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first attendance status template
            </p>
        </field>
    </record>

    <menuitem id="attendance_status_template_menu"
        name="Attendance Status Template"
        parent="attendace_device_menu"
        sequence="100"
        action="attendance_status_template_list_action"
        groups="hr_attendance.group_hr_attendance_manager" />

</odoo>