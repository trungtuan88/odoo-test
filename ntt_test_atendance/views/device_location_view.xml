<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="device_location_list_view" model="ir.ui.view">
        <field name="name">device.location.list.view</field>
        <field name="model">device.location</field>
        <field name="arch" type="xml">
            <list string="Device Locations"
                editable="bottom" sample="1">
                <field name="name"/>
                <field name="hr_work_location_id"/>
            </list>
        </field>
    </record>

    <record id="device_location_form_view" model="ir.ui.view">
        <field name="name">device.location.form.view</field>
        <field name="model">device.location</field>
        <field name="arch" type="xml">
            <form string="Device Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hr_work_location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="device_location_action_view" model="ir.actions.act_window">
        <field name="name">Device Location</field>
        <field name="res_model">device.location</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first device location
            </p>
        </field>
    </record>

    <menuitem id="device_location_menu"
        name="Device Location"
        parent="attendace_device_menu"
        sequence="2"
        action="device_location_action_view"
        groups="hr_attendance.group_hr_attendance_manager" />

</odoo>